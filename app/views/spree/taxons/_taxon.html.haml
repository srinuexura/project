- if taxon.products.any?
  .taxon{"data-hook" => "taxon"}
    %a.taxon_title{:href=>seo_url(taxon)}
      %h4
        = image_tag taxon.icon.url(:original), :class=>"activity_icon"
        = taxon.name
        %span.small= pluralize taxon.products.active.count, "activity"

    .activities
      = render :partial => 'spree/shared/products', :locals => { :products => taxon_preview(taxon), :taxon => taxon, :hide_activity_type => true }
